<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/coolWhite"
    android:padding="16dp">

    <!-- Top Row with Filter Icon and Close Icon -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue">

        <!-- Filter Icon -->
        <ImageView
            android:id="@+id/filter_icon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/filter_icon"
            android:contentDescription="Filter Icon"
            android:layout_alignParentStart="true"
            app:tint="@color/white" />

        <!-- Title -->
        <TextView
            android:id="@+id/filter_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Filters"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/white" />

        <!-- Close Icon -->
        <ImageView
            android:id="@+id/close_icon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/close_icon"
            android:contentDescription="Close Filter"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <!-- Scrollable content area -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Event Type Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event Type"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <Spinner
                android:id="@+id/event_type_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/black"
                android:layout_marginBottom="16dp" />

            <!-- Categories Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Categories"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <Spinner
                android:id="@+id/category_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/black"
                android:layout_marginBottom="16dp" />

            <!-- Price Picker Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.slider.RangeSlider
                android:id="@+id/price_range_slider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="Price Range Slider"
                android:valueFrom="0.0"
                android:valueTo="100.0"
                android:stepSize="1.0" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/black"
                android:layout_marginBottom="16dp" />

            <!-- Availability Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Availability"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <CheckBox
                android:id="@+id/availability_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Available"
                android:textSize="16sp" />

            <!-- Sale Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Only services on sale"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <CheckBox
                android:id="@+id/sale_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="On sale"
                android:textSize="16sp" />

            <!-- Filter Button -->
            <Button
                android:id="@+id/filter_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/blue"
                android:padding="12dp"
                android:text="Apply Filter"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <!-- Reset Filter Button -->
            <Button
                android:id="@+id/reset_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/black"
                android:padding="12dp"
                android:text="Reset Filter"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>


