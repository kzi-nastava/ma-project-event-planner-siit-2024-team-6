<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/blue"
    android:padding="12dp">

    <ImageView
        android:id="@+id/image_chat_photo"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:scaleType="centerCrop"
        android:contentDescription="User photo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/text_chat_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/image_chat_photo"
        app:layout_constraintTop_toTopOf="@id/image_chat_photo"
        app:layout_constraintBottom_toBottomOf="@id/image_chat_photo"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingStart="12dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
