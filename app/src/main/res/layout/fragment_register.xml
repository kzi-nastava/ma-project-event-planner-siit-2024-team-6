<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.RegisterFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Common fields for all users -->
            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="First Name"
                
                android:textColor="#000000" />

            <EditText
                android:id="@+id/etSurname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Last Name"
                
                android:textColor="#000000" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                
                android:textColor="#000000" />

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:inputType="textPassword"
                
                android:textColor="#000000" />

            <EditText
                android:id="@+id/etAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address"
                
                android:textColor="#000000" />

            <EditText
                android:id="@+id/etPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone Number"
                
                android:textColor="#000000" />

            <Button
                android:id="@+id/btnUploadPhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload Photo"
                android:textColor="#FFFFFF" />

            <!-- Button to switch to Provider registration -->
            <Button
                android:id="@+id/btnSwitchToProvider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register as Provider"
                
                android:textColor="#FFFFFF" />

            <!-- Additional fields for Provider -->
            <LinearLayout
                android:id="@+id/providerFields"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <EditText
                    android:id="@+id/etCompanyName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Company Name"
                    
                    android:textColor="#000000" />

                <EditText
                    android:id="@+id/etCompanyEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Company Email"
                    
                    android:textColor="#000000" />

                <EditText
                    android:id="@+id/etCompanyAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Company Address"
                    
                    android:textColor="#000000" />

                <EditText
                    android:id="@+id/etDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Description"
                    
                    android:textColor="#000000" />

                <EditText
                    android:id="@+id/etOpeningTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Opening Time"
                    
                    android:textColor="#000000" />

                <EditText
                    android:id="@+id/etClosingTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Closing Time"
                    
                    android:textColor="#000000" />

                <Button
                    android:id="@+id/btnUploadEventPhoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload Event Photo"
                    
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <Button
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Register"
                
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </ScrollView>

</FrameLayout>