<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dialogs.EventDetailsDialog">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/btn_exit"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/close_icon"
                android:layout_gravity="end" />

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/event_image_carousel"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/provider_icon"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/account_circle" />

                <ImageButton
                    android:id="@+id/btn_favorite"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/heart_icon"
                    android:layout_gravity="end" />
            </LinearLayout>

            <TextView android:id="@+id/event_title"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView android:id="@+id/event_description"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView android:id="@+id/event_place"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView android:id="@+id/event_date"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>

</FrameLayout>