<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.OffersFragment">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/parentScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- Search -->
            <LinearLayout
                android:background="@color/blue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/toolbar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.appcompat.widget.SearchView
                    android:id="@+id/offers_search"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/border_background"
                    android:backgroundTint="@color/white"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    android:theme="@style/Theme.Eventure"
                    android:layout_marginBottom="8dp"
                    app:searchIcon="@drawable/search_icon"/>
            </LinearLayout>
            <!-- Carousel with Arrows -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginBottom="16dp">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/offerCarousel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" />

                <!-- Left Arrow -->
                <ImageButton
                    android:id="@+id/offerPrevButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:src="@drawable/arrow_left_icon"
                    android:contentDescription="Previous Product" />

                <!-- Right Arrow -->
                <ImageButton
                    android:id="@+id/offerNextButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:src="@drawable/arrow_right_icon"
                    android:contentDescription="Next Product" />
            </RelativeLayout>

            <!-- Header with Title and Filter -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="35dp">

                <TextView
                    android:id="@+id/products_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Offers"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_alignParentStart="true" />

                <!-- Filter Text -->
                <TextView
                    android:id="@+id/filter_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Filter"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_toStartOf="@id/offers_filter_icon"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="4dp" />

                <!-- Sorting Spinner -->
                <Spinner
                    android:id="@+id/offers_sort_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@id/filter_text"
                    android:layout_marginEnd="8dp" />

                <!-- Filter Icon -->
                <ImageView
                    android:id="@+id/offers_filter_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/filter_icon"
                    android:contentDescription="Filter"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:padding="4dp" />

            </RelativeLayout>
            <TextView
                android:id="@+id/emptyOffers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No offers found."
                android:gravity="center"
                android:visibility="gone"
                android:textSize="18sp"
                android:padding="16dp"/>
            <!-- RecyclerView for Product Cards -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/productRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="true"
                android:scrollbars="none" />

            <Button
                android:id="@+id/loadMoreOffers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="80dp"
                android:padding="10dp"
                android:text="Load More"
                android:visibility="gone" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</FrameLayout>
