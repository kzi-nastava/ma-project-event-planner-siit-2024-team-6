<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Event Image -->
        <ImageView
            android:id="@+id/event_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/concert" />

        <!-- Content Container for Title, Location, Date -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Event Title -->
            <TextView
                android:id="@+id/event_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ed Sheeran Concert"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="?android:textColorPrimary" />

            <!-- Event Location -->
            <TextView
                android:id="@+id/event_location_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event Location"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/event_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bulevar Oslobodjenja 16"
                android:textSize="14sp"
                android:textColor="@color/black" />

            <!-- Event Date -->
            <TextView
                android:id="@+id/event_date_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date and Time"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/event_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10/10/2024 at 13h"
                android:textSize="14sp"
                android:textColor="@color/black" />
        </LinearLayout>

        <!-- Full-Width "View More" Button -->
        <Button
            android:id="@+id/button_view_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/lightGreen"
            android:text="View More"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:padding="12dp"
            android:gravity="center" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
