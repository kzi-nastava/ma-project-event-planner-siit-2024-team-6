<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    android:backgroundTint="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Product Image and Favorite Icon -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <ImageView
                android:id="@+id/provider_product_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/decoration" />

            <ImageView
                android:id="@+id/favorite_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/heart_icon"
                android:contentDescription="Favorite"
                android:layout_alignParentEnd="true"
                android:layout_margin="16dp" />

            <TextView
                android:id="@+id/provider_sale_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SALE"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:background="@drawable/sale_tag_background"
                android:padding="8dp"
                android:layout_alignParentStart="true"
                android:layout_margin="16dp" />
        </RelativeLayout>

        <!-- Content Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Product Title -->
            <TextView
                android:id="@+id/product_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Title"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <!-- Category -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/category_icon"
                    android:contentDescription="Category Icon" />

                <TextView
                    android:id="@+id/product_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Category"
                    android:textSize="16sp"
                    android:textColor="@android:color/darker_gray" />
            </LinearLayout>

            <!-- Prices and Rating in Line -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <!-- Prices Container -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/price_icon"
                        android:layout_marginRight="10dp"
                        android:contentDescription="Euro Icon" />

                    <!-- Original Price -->
                    <TextView
                        android:id="@+id/provider_product_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100€"
                        android:textSize="18sp"
                        android:textColor="@android:color/black"
                        android:layout_marginEnd="8dp" />

                    <!-- Sale Price -->
                    <TextView
                        android:id="@+id/provider_sale_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="80€"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/pink"
                        android:visibility="gone" />
                </LinearLayout>

                <!-- Rating Container -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end">

                    <ImageView
                        android:id="@+id/rating_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/star_icon"
                        android:contentDescription="Rating Icon" />

                    <TextView
                        android:id="@+id/rating_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="4.5 "
                        android:textSize="17sp"
                        android:textColor="@color/black" />
                </LinearLayout>
            </LinearLayout>

            <!-- Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="end">

                <Button
                    android:id="@+id/edit_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="#3f4c6d"
                    android:text="Edit"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/delete_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#8b6a9d"
                    android:text="Delete"
                    android:textColor="@android:color/white" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
