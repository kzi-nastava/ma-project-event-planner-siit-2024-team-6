<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    app:cardElevation="8dp"
    android:backgroundTint="@color/white"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Sale Tag - Positioned at the top left corner -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Product Image -->
            <ImageView
                android:id="@+id/product_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/decoration" />

            <!-- Sale Tag TextView placed on top of the ImageView -->
            <TextView
                android:id="@+id/sale_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SALE"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:layout_margin="8dp"
                android:background="@drawable/sale_tag_background"
                android:padding="8dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="16dp" /> <!-- Adjust this for vertical positioning -->

        </RelativeLayout>
        <!-- Content Container for Title, Location, Date, and Rating -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Title and Heart Icon for Favorites -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/product_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Decoration Luna"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="?android:textColorPrimary" />

                <ImageView
                    android:id="@+id/favorite_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/heart_icon"
                    android:contentDescription="Favorite" />
            </RelativeLayout>

            <!-- product Location -->
            <TextView
                android:id="@+id/product_category_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/product_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Decoration"
                android:textSize="17sp"
                android:textColor="@color/black"/>

            <!-- Price and Rating Section -->
            <TextView
                android:id="@+id/product_price_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginTop="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:weightSum="1">

                <!-- Product Price and Euro Icon aligned to the left -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="0.25"
                    android:gravity="start">

                    <TextView
                        android:id="@+id/product_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100"
                        android:textSize="17sp"
                        android:textColor="@color/black"/>

                    <ImageView
                        android:id="@+id/euro_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/euro_icon"
                        android:contentDescription="Euro Icon" />
                </LinearLayout>


                <!-- Price Sale and Euro Icon aligned to the left -->
                <LinearLayout
                    android:id="@+id/sale_price_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="0.25"
                    android:gravity="start">

                    <TextView
                        android:id="@+id/sale_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="80"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textColor="@color/black" />

                    <ImageView
                        android:id="@+id/sale_euro_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/euro_icon"
                        android:contentDescription="Euro Icon" />
                </LinearLayout>

                <!-- Rating Icon and Number aligned to the right -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="0.5"
                    android:gravity="end">

                    <ImageView
                        android:id="@+id/rating_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/star_icon"
                        android:contentDescription="Rating Icon" />

                    <TextView
                        android:id="@+id/rating_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="4.5"
                        android:textSize="17sp"
                        android:textColor="@color/black" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="end"
                android:orientation="horizontal"
                android:padding="8dp">

                <!-- Edit Button -->
                <Button
                    android:id="@+id/edit_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="#3f4c6d"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp"
                    android:text="Edit"
                    android:textColor="@android:color/white" />

                <!-- Delete Button -->
                <Button
                    android:id="@+id/delete_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#8b6a9d"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp"
                    android:text="Delete"
                    android:textColor="@android:color/white" />
            </LinearLayout>

        </LinearLayout>

        <!-- Full-Width "View More" Button -->
    </LinearLayout>
</androidx.cardview.widget.CardView>
