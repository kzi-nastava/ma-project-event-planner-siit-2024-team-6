<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/budget_section"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#f9f9f9"
    android:padding="16dp"
    android:elevation="2dp"
    android:layout_marginBottom="20dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/budget_title"
            android:text="Budget Planning"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#3b4664"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/new_item_button"
            android:text="New Item"
            android:backgroundTint="#8B6A9D"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!-- Header Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="16dp"
        android:paddingBottom="8dp">

        <TextView
            android:text="Category"
            android:textStyle="bold"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#8B6A9D" />

        <TextView
            android:text="Max ($)"
            android:textStyle="bold"
            android:layout_weight="1.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#8B6A9D" />

        <TextView
            android:text="Spent ($)"
            android:textStyle="bold"
            android:layout_weight="1.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#8B6A9D" />

        <View
            android:layout_width="48dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!-- Budget item list container -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/budget_items_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Budget Summary -->
    <LinearLayout
        android:id="@+id/budget_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="start"
        android:weightSum="2"
        android:padding="8dp">

        <TextView
            android:id="@+id/total_max_amount"
            android:text="Total Max Amount: $0"
            android:textColor="#d9534f"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/total_spent_amount"
            android:text="Spent Amount: $0"
            android:textColor="#3b4664"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>
