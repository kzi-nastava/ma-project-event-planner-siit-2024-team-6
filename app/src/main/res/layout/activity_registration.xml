<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#758B58">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:margin="16dp">

        <!-- Common fields for all users -->
        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="First Name"
            android:backgroundTint="#758B58"
            android:textColor="#000000"
            android:hintTextColor="#A9A9A9" />

        <EditText
            android:id="@+id/etSurname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Last Name"
            android:backgroundTint="#758B58"
            android:textColor="#000000"
            android:hintTextColor="#A9A9A9" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:backgroundTint="#758B58"
            android:textColor="#000000"
            android:hintTextColor="#A9A9A9" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:backgroundTint="#758B58"
            android:textColor="#000000"
            android:hintTextColor="#A9A9A9" />

        <EditText
            android:id="@+id/etAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Address"
            android:backgroundTint="#758B58"
            android:textColor="#000000"
            android:hintTextColor="#A9A9A9" />

        <EditText
            android:id="@+id/etPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone Number"
            android:backgroundTint="#758B58"
            android:textColor="#000000"
            android:hintTextColor="#A9A9A9" />

        <Button
            android:id="@+id/btnUploadPhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload Photo"
            android:backgroundTint="#758B58"
            android:textColor="#FFFFFF" />

        <!-- Button to switch to Provider registration -->
        <Button
            android:id="@+id/btnSwitchToProvider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register as Provider"
            android:backgroundTint="#758B58"
            android:textColor="#FFFFFF" />

        <!-- Additional fields for Provider -->
        <LinearLayout
            android:id="@+id/providerFields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <EditText
                android:id="@+id/etCompanyName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Company Name"
                android:backgroundTint="#758B58"
                android:textColor="#000000"
                android:hintTextColor="#A9A9A9" />

            <EditText
                android:id="@+id/etCompanyEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Company Email"
                android:backgroundTint="#758B58"
                android:textColor="#000000"
                android:hintTextColor="#A9A9A9" />

            <EditText
                android:id="@+id/etCompanyAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Company Address"
                android:backgroundTint="#758B58"
                android:textColor="#000000"
                android:hintTextColor="#A9A9A9" />

            <EditText
                android:id="@+id/etDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Description"
                android:backgroundTint="#758B58"
                android:textColor="#000000"
                android:hintTextColor="#A9A9A9" />

            <EditText
                android:id="@+id/etOpeningTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Opening Time"
                android:backgroundTint="#758B58"
                android:textColor="#000000"
                android:hintTextColor="#A9A9A9" />

            <EditText
                android:id="@+id/etClosingTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Closing Time"
                android:backgroundTint="#758B58"
                android:textColor="#000000"
                android:hintTextColor="#A9A9A9" />

            <Button
                android:id="@+id/btnUploadEventPhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload Event Photo"
                android:backgroundTint="#758B58"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register"
            android:backgroundTint="#758B58"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</ScrollView>
