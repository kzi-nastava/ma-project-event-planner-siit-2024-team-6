<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Общие поля для всех пользователей -->
        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Имя" />

        <EditText
            android:id="@+id/etSurname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Фамилия" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Пароль"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/etAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Адрес" />

        <EditText
            android:id="@+id/etPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Телефон" />

        <Button
            android:id="@+id/btnUploadPhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Загрузить фото" />

        <!-- Кнопка для переключения на Провайдера -->
        <Button
            android:id="@+id/btnSwitchToProvider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Зарегистрироваться как Провайдер" />

        <!-- Дополнительные поля для Провайдера -->
        <LinearLayout
            android:id="@+id/providerFields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <EditText
                android:id="@+id/etCompanyName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Название компании" />

            <EditText
                android:id="@+id/etCompanyEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email компании" />

            <EditText
                android:id="@+id/etCompanyAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Адрес компании" />

            <EditText
                android:id="@+id/etDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Описание" />

            <EditText
                android:id="@+id/etOpeningTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Время открытия" />

            <EditText
                android:id="@+id/etClosingTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Время закрытия" />

            <Button
                android:id="@+id/btnUploadEventPhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Загрузить фото мероприятия" />
        </LinearLayout>

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Зарегистрироваться" />
    </LinearLayout>
</ScrollView>
