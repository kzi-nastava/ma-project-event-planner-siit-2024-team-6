<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="24dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Review Suggestion"
        android:textAlignment="center"
        android:textColor="@color/purple"
        android:textSize="27dp"
        />

    <Spinner
        android:id="@+id/spinner_existing_categories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:padding="12dp"
        android:minHeight="48dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="or"
        android:textAlignment="center"
        android:textSize="25dp"
        />

    <EditText
        android:id="@+id/edit_suggestion_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:hint="New Category Name"
        android:inputType="textPersonName"
        android:enabled="false"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/edit_suggestion_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:hint="New Category Description"
        android:inputType="textMultiLine"
        android:enabled="false"
        android:layout_marginTop="8dp" />

    <!-- Submit and Cancel buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="end"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel" />

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/pink"
            android:text="Submit"
            android:layout_marginStart="16dp" />
    </LinearLayout>

</LinearLayout>
