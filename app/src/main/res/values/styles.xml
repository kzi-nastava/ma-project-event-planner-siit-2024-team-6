        <item name="android:textSize">40sp</item>  <!-- Adjust text size here -->
        <item name="android:textColor">#333333</item>  <!-- Adjust text color if needed -->
    </style>
    <style name="ToolbarTitleTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">25sp</item> <!-- Optional: Set the text size -->
