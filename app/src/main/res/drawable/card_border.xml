<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/card_border.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer layer (border) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/pink" /> <!-- Pink border color -->
        </shape>
    </item>
    <!-- Inner layer (background) -->
    <item android:left="3dp" android:right="10dp" android:top="3dp" android:bottom="3dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" /> <!-- Card background color -->
            <corners android:radius="8dp" /> <!-- Match CardView corner radius -->
        </shape>
    </item>
</layer-list>
